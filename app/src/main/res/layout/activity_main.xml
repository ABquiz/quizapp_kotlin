<?xml version="1.0" encoding="utf-8"?> <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#f9f9f9" tools:context=".MainActivity">

    <!-- 종료 확인 팝업 레이아웃 -->
    <LinearLayout
        android:id="@+id/exit_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 종료 확인 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종료 하시겠습니까?"
            android:textSize="18sp" />

        <!-- 확인 및 취소 버튼 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/confirm_exit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="확인" />

            <Button
                android:id="@+id/cancel_exit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="취소" />
        </LinearLayout>
    </LinearLayout>

    <!-- 시작 화면 레이아웃 -->
    <LinearLayout
        android:id="@+id/start_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 시작 화면 종료 버튼 -->
        <Button
            android:id="@+id/exit_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="10dp"
            android:text="종료" />

        <!-- 환영 메시지 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환영합니다"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- 퀴즈 시작 버튼 -->
        <Button
            android:id="@+id/start_quiz_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="시작하기" />
    </LinearLayout>

    <!-- 메인 화면 레이아웃 -->
    <LinearLayout
        android:id="@+id/main_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 메인 화면 상단 버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 처음으로 이동 버튼 -->
            <Button
                android:id="@+id/go_to_start_from_main_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="처음으로" />

            <!-- 종료 버튼 -->
            <Button
                android:id="@+id/exit_main_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="종료" />
        </LinearLayout>

        <!-- 과목 선택 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="과목 선택"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- 과목 선택 버튼들 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/korean_subject_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국어" />

            <Button
                android:id="@+id/history_subject_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한국사" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/social_subject_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사회" />

            <Button
                android:id="@+id/math_subject_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수학" />
        </LinearLayout>

        <!-- 오늘의 누적 점수 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="오늘의 누적 점수"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 과목별 점수 표시 -->
        <TextView
            android:id="@+id/score_korean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국어: 0/0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/score_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한국사: 0/0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/score_social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사회: 0/0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/score_math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수학: 0/0"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 테마 화면 레이아웃 -->
    <LinearLayout
        android:id="@+id/theme_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 테마 화면 상단 버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/go_to_main_from_theme_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="메인화면" />

            <Button
                android:id="@+id/exit_theme_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="종료" />
        </LinearLayout>

        <!-- 과목명 텍스트 -->
        <TextView
            android:id="@+id/theme_subject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="과목명"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- 전체 영역 퀴즈 시작 버튼 -->
        <Button
            android:id="@+id/start_quiz_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체영역" />

        <!-- 난이도/테마 선택 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="난이도/테마 선택"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 난이도 선택 스피너 -->
        <Spinner
            android:id="@+id/level_list_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp" />

        <!-- 테마 선택 스피너 -->
        <Spinner
            android:id="@+id/theme_list_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp" />

        <!-- 필터링된 퀴즈 시작 버튼 -->
        <Button
            android:id="@+id/start_quiz_filtered_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="퀴즈 시작" />
    </LinearLayout>

    <!-- 퀴즈 화면 레이아웃 -->
    <ScrollView
        android:id="@+id/quiz_screen_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/quiz_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 퀴즈 화면 상단 버튼 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/go_to_main_from_quiz_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="메인화면" />

                <Button
                    android:id="@+id/exit_quiz_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="종료" />
            </LinearLayout>

            <!-- 과목명 텍스트 -->
            <TextView
                android:id="@+id/quiz_subject_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="과목명"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- 현재 점수 텍스트 -->
            <TextView
                android:id="@+id/score_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="현재 점수: 0/0"
                android:textSize="18sp" />

            <!-- 문제 텍스트 -->
            <TextView
                android:id="@+id/question_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="문제:"
                android:textSize="20sp" />

            <!-- 지문 텍스트 (초기 숨김) -->
            <TextView
                android:id="@+id/passage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="지문:"
                android:textSize="16sp"
                android:visibility="gone" />

            <!-- 선택지 컨테이너 -->
            <LinearLayout
                android:id="@+id/choices_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
            </LinearLayout>

            <!-- 정답 확인 및 해설 보기 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/check_answer_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="완료" />

                <Button
                    android:id="@+id/show_explanation_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="해설보기"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 결과 텍스트 -->
            <TextView
                android:id="@+id/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="결과:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- 해설 텍스트 -->
            <TextView
                android:id="@+id/explanation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="해설:"
                android:textSize="16sp"
                android:visibility="gone" />

            <!-- 정답 텍스트 -->
            <TextView
                android:id="@+id/correct_answer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="정답:"
                android:textSize="16sp"
                android:visibility="gone" />

            <!-- 다음 문제 및 퀴즈 종료 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/next_question_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="다음문제"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/finish_quiz_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="퀴즈 종료"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 퀴즈 종료 화면 레이아웃 -->
    <LinearLayout
        android:id="@+id/finish_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 종료 화면 상단 버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/go_to_start_from_finish_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="처음으로" />

            <Button
                android:id="@+id/exit_finish_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="종료" />
        </LinearLayout>

        <!-- 과목명 텍스트 -->
        <TextView
            android:id="@+id/finish_subject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="과목명"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- 이번 퀴즈 정답 수 텍스트 -->
        <TextView
            android:id="@+id/final_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="이번 정답 수: 0/0"
            android:textSize="20sp" />

        <!-- 오늘의 누적 점수 텍스트 -->
        <TextView
            android:id="@+id/total_score_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="오늘의 누적 점수: 0/0"
            android:textSize="20sp" />

        <!-- 다시 풀기 및 과목 선택 버튼 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/restart_quiz_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다시 풀기" />

            <Button
                android:id="@+id/go_to_main_from_finish_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="과목 선택" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>